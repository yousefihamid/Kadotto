<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/General/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/General/bootstrap.min.js"></script>
    <script src="~/Scripts/General/validator.min.js"></script>
    <script src="~/Scripts/Core/Tools.js"></script>
    <script src="~/Scripts/Core/utility.js"></script>

    <link href="~/Scripts/Uploader/jquery.ui.plupload/css/jquery-ui.css" rel="stylesheet" />
    <link href="~/Scripts/Uploader/jquery.ui.plupload/css/jquery.ui.plupload.css" rel="stylesheet" />
    <script src="~/Scripts/Uploader/moxie.js"></script>
    <script src="~/Scripts/Uploader/plupload.dev.js"></script>
    <script src="~/Scripts/Uploader/plupload.js"></script>
    <script src="~/Scripts/Uploader/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/Uploader/jquery.ui.plupload/jquery.ui.plupload.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="modal-container" class="modal fade modal-container" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-general modal-left-btn"></button>
                    <button type="button" class="btn btn-secondary modal-cancel-btn" data-dismiss="modal"></button>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
